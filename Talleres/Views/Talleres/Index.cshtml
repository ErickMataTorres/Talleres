@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid" id="usersCnt">
    <div class="container" style="margin-top: 30px;">
        <div class="row" id="header">
            <div class="col-lg-8">
                <h2>Administrador de Talleres</h2>
            </div>
            <div class="col-lg-2">
                <button type="button" id="userAgregar" class="btn btn-primary"><i class="fas fa-plus" style="margin-right: 10px;"></i>Agregar Nuevo taller</button>
            </div>
            <div class="col-lg-2">
                <button type="button" id="reinprimirRecibo" class="btn btn-warning"><i class="fas fa-plus" style="margin-right: 10px;"></i>Reinprimir Recibos</button>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <p>Filtrar tabla por: </p>
            </div>
            <div class="col-lg-10">
                <select class="congresoFilter congreso">
                    <option hidden selected disabled>Elija un congreso para filtrar la tabla</option>
                </select>
            </div>

        </div>

    </div>

    <div class="row">
        <div class="container">
            <div class="col-12">
                <div id="loadingIcon">
                    <i class="fas fa-spinner fa-pulse fa-2x"></i>
                </div>
                <div id="tablaContainer">
                    <table id="users" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Profesor</th>
                                <th>Cupo</th>
                                <th>Inscritos</th>
                                <th>Precio</th>
                                <th>Turno</th>
                                <th>Horario</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@* Modificar taller *@
<div class="modal fade" id="userModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid" id="userModificar">
                    <form id="modifForm">
                        <div class="row">
                            <div class="col-2">
                                <p>Nombre: </p>
                            </div>
                            <div class="col-10">
                                <input type="text" maxlength="250" placeholder="..." id="tb_Nombres" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <p>Profesor: </p>
                            </div>
                            <div class="col-10">
                                <select id="profesores">
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-2">
                                <p>Congreso: </p>
                            </div>
                            <div class="col-10">
                                <select id="congreso">
                                    <option hidden selected disabled>Elija un congreso</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-2">
                                <p>Cupo: </p>
                            </div>
                            <div class="col-10">
                                <input type="text" maxlength="30" placeholder="..." id="tb_Cupo" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-2">
                                <p>Precio: </p>
                            </div>
                            <div class="col-10">
                                <input type="text" maxlength="60" placeholder="..." id="tb_Precio" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-2">
                                <p>Turno: </p>
                            </div>
                            <div class="col-10">
                                <select id="cb_turno">
                                    <option selected disabled>Elije un turno</option>
                                    <option value="0">Matutino</option>
                                    <option value="1">Vespertino</option>

                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-2">
                                <p>Horario: </p>
                            </div>
                            <div class="col-10">
                                <input type="text" maxlength="30" placeholder="..." id="tb_Horario" />
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btn_Guardar" class="btn btn-primary">Guardar Cambios</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

